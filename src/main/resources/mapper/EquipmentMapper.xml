<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.myapp.mapper.EquipmentMapper">

    <resultMap id="BaseResultMap" type="org.example.myapp.bean.Equipment">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
            <result property="picUrl" column="pic_url" jdbcType="VARCHAR"/>
            <result property="date" column="date" jdbcType="DATE"/>
            <result property="isLend" column="is_lend" jdbcType="TINYINT"/>
            <result property="isScrap" column="is_scrap" jdbcType="TINYINT"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,category_id,
        pic_url,date,is_lend,
        is_scrap,user_id,description
    </sql>
    <select id="findEquipmentByName" resultType="org.example.myapp.bean.Equipment">
        SELECT * FROM equipment WHERE name LIKE CONCAT('%', #{subname}, '%') and user_id = #{userId}
    </select>

    <select id="findEquipmentByName_s" resultType="org.example.myapp.bean.Equipment">
        SELECT * FROM equipment WHERE name LIKE CONCAT('%', #{subname}, '%')
    </select>
</mapper>
